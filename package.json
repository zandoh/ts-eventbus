{
  "name": "@zandoh/ts-eventbus",
  "type": "module",
  "version": "0.0.0",
  "description": "Type-safe EventBus with functional programming patterns",
  "author": "zandoh",
  "license": "MIT",
  "homepage": "https://github.com/zandoh/ts-eventbus#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zandoh/ts-eventbus.git"
  },
  "bugs": "https://github.com/zandoh/ts-eventbus/issues",
  "keywords": [
    "eventbus",
    "event",
    "emitter",
    "pubsub",
    "typescript",
    "functional",
    "fp",
    "type-safe",
    "middleware",
    "operators"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "bump": "changeset",
    "lint": "eslint --fix",
    "ci": "pnpm type-check && pnpm check-exports",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.1",
    "@arethetypeswrong/cli": "^0.17.2",
    "@changesets/cli": "^2.27.11",
    "eslint": "^9.17.0",
    "lint-staged": "^15.3.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.2",
    "unbuild": "^3.2.0",
    "vitest": "^2.1.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint"
  }
}
